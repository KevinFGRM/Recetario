<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recetario.Views.PresentacionView"
             Title="PresentacionView"
             BackgroundColor="LightCoral">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="2" Aspect="Fill" Source="plantilla.jpeg"/>
        <Button BackgroundColor="LightCyan"  Grid.Row="1" WidthRequest="200" HeightRequest="50" Margin="5" TextColor="Black" Text="Entrar"  Command="{Binding EntrarCommand}"></Button>
    </Grid>
</ContentPage>